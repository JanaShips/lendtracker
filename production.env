# ============================================
# LendTracker - Production Environment Variables
# ============================================
# IMPORTANT: Copy this to .env and fill in your values
# DO NOT commit .env to version control!
# ============================================

# ============================================
# Application Profile
# ============================================
SPRING_PROFILES_ACTIVE=prod

# ============================================
# Server Ports
# ============================================
BACKEND_PORT=8080
FRONTEND_PORT=80
FRONTEND_SSL_PORT=443
MYSQL_PORT=3306

# ============================================
# Database Configuration
# ============================================
# MySQL credentials
DB_HOST=mysql
DB_PORT=3306
DB_NAME=lendtracker
DB_USERNAME=lendtracker
DB_PASSWORD=YOUR_STRONG_DB_PASSWORD_HERE

# MySQL root password (for container initialization)
MYSQL_ROOT_PASSWORD=YOUR_MYSQL_ROOT_PASSWORD_HERE

# Alternative: Full DATABASE_URL (for cloud platforms)
# DATABASE_URL=mysql://lendtracker:password@host:3306/lendtracker

# ============================================
# JWT Security
# ============================================
# IMPORTANT: Generate a strong secret key!
# Run: openssl rand -base64 64
JWT_SECRET=YOUR_SUPER_SECRET_JWT_KEY_MINIMUM_256_BITS_REPLACE_THIS_WITH_RANDOM_STRING
JWT_EXPIRATION=604800000

# ============================================
# Email Configuration (Gmail SMTP)
# ============================================
# For Gmail:
# 1. Enable 2FA on your Gmail account
# 2. Generate App Password: https://myaccount.google.com/apppasswords
# 3. Use the App Password below (not your regular password)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-16-char-app-password

# ============================================
# Application URLs
# ============================================
# Frontend URL (for email links)
APP_BASE_URL=https://your-domain.com

# API URL for frontend
VITE_API_URL=/api

# ============================================
# Optional: Cloud Platform Specific
# ============================================
# For Railway:
# DATABASE_URL is auto-provided

# For Render:
# DATABASE_URL is auto-provided

# For Vercel (frontend only):
# Set VITE_API_URL to your backend URL
# VITE_API_URL=https://api.your-domain.com/api
